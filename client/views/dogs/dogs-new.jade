h1 New Contact
.row
  .col-xs-4.col-xs-offset-1
    form
      .form-group
        label(for='name') Name
        input.form-control#name(type='text', name='name', ng-model='dog.name')
      .form-group
        label(for='age') Age
        input.form-control#age(type='number', name='about', ng-model='dog.age')
      .form-group
        label(for='gender') Gender
        select.form-control#gender(name='gender', ng-model='dog.gender')
          option Male
          option Female
      .form-group
        label(for='photo') Photo
        input.form-control#photo(type='url', name='photo', ng-model='dog.photo')
        img#previewPic
      .form-group
        button.btn.form-control.btn-success(type='submit', ng-click='addDog(dog)') Add Dog
